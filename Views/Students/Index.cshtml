@model IEnumerable<ArmyTechTask.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-4">Students</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success mt-4" })
</p>
<table class="table table-hover mt-4">
    <tr class="thead-dark">
        <th>
            Student Name
        </th>
        <th>
            BirthDate
        </th>
        <th>
            Field
        </th>
        <th>
            Neighborhood
        </th>
        <th>
            Governorate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Field.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Governorate.Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })

                @Html.ActionLink("Delete", "Delete", "Students", new { id = item.ID }, new
           {
               @class = "btn btn-outline-danger",
               onclick = "return confirm('Are you sure to delete student " + item.Name + " ?');"
           })
            </td>
        </tr>
    }

</table>
